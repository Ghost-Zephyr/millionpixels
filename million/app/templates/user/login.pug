extends layout
block head
  include includes/jQuery.pug
block content
  #form
    h3#title Login
    form#loginForm(enctype='application/json')
      .form-row
        .col
          label(for='nick') Nick
          input.form-control(name='nick' id='nick' placeholder='Nickname' type='username' required)
        .col
          label(for='pwd') Password
          input.form-control(name='pwd' id='pwd' placeholder='Password' type='password' required)
      br
      .form-group
        button.btn.btn-primary(type='submit') Login
block script
  script(src='/static/user.js')
